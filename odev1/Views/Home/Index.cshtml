@model odev1.Models.StudentModel
@{
    ViewBag.Title = "İlker Ödev";
}


<div class="row">
    <div class="col-lg-4">
      
    </div>
    <div class="col-lg-4">
        <form action="@Url.Action("Download", "Home")" method="get">
            <div class="form-group">
                <label for="No">Öğrenci No</label>
                <input type="text" class="form-control" id="No" name="No" placeholder="Öğrenci No">
            </div>
            <div class="form-group">
                <label for="Name">Öğrenci Adı</label>
                <input type="text" class="form-control" id="Name" name="Name" placeholder="Öğrenci Adı">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Öğrenci Soyadı</label>
                <input type="text" class="form-control" id="Surname" name="Surname" placeholder="Öğrenci Soyadı">
            </div>
            <div class="form-group">
                <select id="DownloadType" name="DownloadType" class="form-control" aria-label="Default select example">
                    <option value="1">Word</option>
                    <option value="2">Pdf</option>
                    <option value="3">Excel</option>
                </select>
            </div>
            <button type="submit" class="btn btn-info">Getir</button>
        </form>
    </div>
    <div class="col-lg-4">
    </div>
</div>